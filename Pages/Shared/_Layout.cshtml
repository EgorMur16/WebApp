@using Microsoft.AspNetCore.Identity
@using WebAppAutorization.Data.Identity
@inject SignInManager<ApplicationIdentityUser> SignInManager
@inject UserManager<ApplicationIdentityUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>WallVision</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="icon" type="image/x-icon" href="/assets/logo.ico">
</head>

<body class="font-sans min-h-screen flex flex-col" style="background:#1a1a1b;">
    <header class="0 border-2 sticky rounded-md mx-4 mt-1 top-0 z-10" style="border-color:#272729; background:#1e1e1f;">
        <div class="max-w-8xl mx-8">
            <div class="flex h-16 items-center justify-between">
                <div class="flex items-center">
                    <img class="h-10 w-auto" src="/assets/logo.png" alt="Logo">
                    <a href="/"><p class="ml-2 text-2xl font-bold text-white">WallVision</p></a>


                </div>
                <nav class="flex items-center space-x-4">
                    <a class="text-white hover:text-gray-300 transition duration-300" asp-area="" asp-page="/Index">Главная</a>
                    <partial name="_LoginPartial" />
                </nav>
            </div>
        </div>
    </header>
    
    <main class="flex-grow">
        <div class="container w-full max-w-7xl mx-auto px-4 py-8">
            @RenderBody()
        </div>
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>