@page
@model LoginModel

@{
    ViewData["Title"] = "Авторизация";
}

<style>
    p,a{
        color: #aaaaaa;
    }

    input {
        color: #707077;
    }
</style>

<h1 class="font-bold text-3xl text-white text-center">Авторизация</h1>
<div class="flex justify-center mt-6">
    <div class="row w-full max-w-md bg-white shadow-md border rounded-lg p-6" style="border-color:#272729; background:#1e1e1f;">

        <section>
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <p class="block font-medium">Почта:</p>
                    <input asp-for="Input.Email" class="w-full border rounded-md px-4 py-2 mt-1" autocomplete="username" placeholder="Введите свою почту" aria-required="true" style="background: #2a2a2b; border-color: #303031;" />
                </div>
                <div class="form-floating">
                    <p class="block font-medium">Пароль:</p>
                    <input asp-for="Input.Password" class="w-full border rounded-md px-4 py-2 mt-1" autocomplete="current-password" placeholder="Пароль" aria-required="true" style="background: #2a2a2b; border-color: #303031;" />
                </div>
                <div>
                    <button id="login-submit" type="submit" class=" text-white py-2 px-8 mt-4 mb-2 rounded-md w-full" style="background:#37373b;">Авторизоваться</button>
                </div>
                <div>

                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="">Нет аккаунта? Регистрация</a>

                    </p>
                </div>
            </form>
        </section>
    </div>
    
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
