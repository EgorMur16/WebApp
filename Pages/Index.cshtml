@page
@using Microsoft.AspNetCore.Identity
@using WebAppAutorization.Data.Identity
@model IndexModel
@{
    ViewData["Title"] = "WallVision";
}

<div class="w-full mx-auto flex flex-col items-center justify-center space-y-4 py-12">
    <h1 class="text-white text-6xl font-bold">WallVision</h1>
    <p class="text-gray-300 text-xl">Создание уютной комнаты в пару кликов</p>
    <a class="rounded-md bg-indigo-600 px-8 py-3 text-lg font-medium text-white hover:bg-indigo-700 transition-colors duration-200"
       asp-area="Identity" asp-page="/Account/Login">Начать</a>
</div>

<div class="w-full max-w-6xl mx-auto px-4 py-8">
    <h2 class="text-white text-3xl font-bold mb-6 text-center">Примеры изображений:</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

        <div class="rounded-lg overflow-hidden shadow-lg">
            <img src="~/assets/example_one.png" class="w-full h-auto">
        </div>

        <div class="rounded-lg overflow-hidden shadow-lg">
            <img src="~/assets/example_two.png" class="w-full h-auto">
        </div>
    </div>
</div>