@using Microsoft.AspNetCore.Identity
@using WebAppAutorization.Data.Identity
@inject SignInManager<ApplicationIdentityUser> SignInManager
@inject UserManager<ApplicationIdentityUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <a class="text-white" asp-page="/Imagine">Редактировать</a>
    <form class="d-inline-block" asp-area="Identity" asp-page="/Account/Logout"
          asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
        <button type="submit" class="rounded-md bg-indigo-600 px-3 py-2 text-sm font-medium text-white hover:bg-indigo-700">Выход</button>
    </form>
}
else
{

    <a class="rounded-md bg-indigo-600 px-3 py-2 text-sm font-medium text-white hover:bg-indigo-700"
       asp-area="Identity" asp-page="/Account/Login">Авторизация</a>
}
